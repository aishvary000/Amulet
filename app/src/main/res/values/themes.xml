<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Evepeeve" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1E90FF</item>
        <item name="colorPrimaryVariant">#1E90FF</item>
        <item name="colorOnPrimary">#000087</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1E90FF</item>
        <item name="colorSecondaryVariant">#FF03DAC5</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ToolbarColoredBackArrow" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="Theme.Evepeeve.NoactinBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00bfff</item>
        <item name="colorPrimaryVariant">#1E90FF</item>
        <item name="colorOnPrimary">#000087</item>
        <!-- Secondary brand color. this helps in button and loading screen -->
        <item name="colorSecondary">#1E90FF</item>
        <item name="colorSecondaryVariant">#FF03DAC5</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>