<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AdminOptions"
    android:padding="5dp"
    android:orientation="vertical"
    >
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="200dp"
       android:background="#318ce7">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_arrow"
           android:background="@drawable/circleback"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="5dp"
           android:padding="10dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="end"
           android:layout_marginRight="5dp"
           android:orientation="vertical">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_home"
           android:background="@drawable/circleback"
           android:layout_marginTop="5dp"
           android:padding="10dp"/>
       </LinearLayout>
   </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user"
        android:padding="25dp"
        android:elevation="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/circle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="20dp"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Soumya Goyal"
        android:layout_marginTop="15dp"
        android:id="@+id/AdminHomePageName"
        android:textColor="@color/black"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="1.9"
       android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="19ucc067@lnmiit.ac.in"
        android:id="@+id/AdminHomePageEmail"
        android:textColor="@color/black"
        android:textSize="15dp"/>
   </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="0.1"
        android:layout_height="wrap_content">


    <Button
        android:layout_width="match_parent"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:id="@+id/AdminLoginSingOut"
        android:layout_height="match_parent"/>
    </LinearLayout>
    </LinearLayout>
     <View
         android:layout_width="match_parent"
         android:layout_marginTop="2dp"
         android:layout_height="2dp"
         android:background="#C0C0C0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#318ce7"

            android:layout_marginHorizontal="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_reading"
                    android:clickable="true"
                    android:onClick="test"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Club Admin"
                    android:textStyle="bold"
                    ></TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#318ce7"

            android:layout_marginHorizontal="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_presentation"
                    android:clickable="true"
                    android:onClick="test"/>
                <TextView
                    android:layout_marginTop="10dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    ></TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

